<h1>Listing products</h1>

<div style="overflow-x:auto">
<table class="product-listing">
  <tr>
		<th></th>
    <th>Name</th>
		<th>Condition</th>
		<th>Category</th>
    <th>Price</th>
		<th>Postage</th>
    <th>Qty</th>
		<th>Featured</th>
		<th></th>
		<th class="destroy-link"><%= link_to "More", "#", :class => "button extra-info-link" %></th>
		<th class="extra-info">Google Category</th>
		<th class="extra-info">Brand</th>
		<th class="extra-info">Barcode</th>
  </tr>

<% @products.each do |product| %>
  <tr>
		<td><%= image_tag product.image.url(:thumb) unless product.image.nil? %></td>
    <td><%= link_to product.name, product %></td>
		<td><%= product.condition %></td>
    <td><%= product.category_breadcrumb %></td>
    <td><%= number_to_currency(product.price) %></td>
		<td><%= number_to_currency(product.postage_cost) %></td>
    <td><%= product.quantity %></td>
		<td><%= image_tag("tick.png") if product.featured? %></td>
		<td><%= link_to 'Edit', edit_product_path(product), :class => "button" %></td>
		<td><%= link_to 'Delete', product, :class => "button negative", :confirm => 'Are you sure you want to delete this product?', :method => :delete %></td>
		<td class="extra-info"><%= product.google_category %></td>
		<td class="extra-info"><%= product.brand %></td>
		<td class="extra-info"><%= product.barcode %></td>
	</tr>
<% end %>
</table>
</div>
<br />

<%= link_to 'New Product', new_product_path, :class => "button positive" %>
