<h1>Listing products</h1>

<div style="overflow-x:auto">
	Quick Find: <%= text_field_tag :quick_find %> 
	
	<table id="all-product-listings">
	  <thead>
			<tr>
				<th></th>
		    <th>Name</th>
				<th filter-type="ddl">Condition</th>
				<th filter-type="ddl">Category</th>
		    <th>Price</th>
				<th>Postage</th>
		    <th>Qty</th>
				<th filter-type="ddl">Featured</th>
				<th filter-type="ddl">Brand</th>
				<th>Barcode</th>
				<th></th>
				<th></th>
				
		  </tr>
		</thead>
		<tbody>
			<% @products.each do |product| %>
			  <tr>
					<td><%= image_tag product.image.url(:thumb) unless product.image.nil? %></td>
			    <td><%= link_to product.name, product %></td>
					<td><%= product.condition %></td>
			    <td><%= product.category_breadcrumb %></td>
			    <td><%= number_to_currency(product.price, :unit => "") %></td>
					<td><%= number_to_currency(product.postage_cost, :unit => "") %></td>
			    <td><%= product.quantity %></td>
					<td><%= image_tag("tick.png") if product.featured? %></td>
					<td><%= product.brand %></td>
					<td><%= product.barcode %></td>
					<td><%= link_to 'Edit', edit_product_path(product), :class => "button" %></td>
					<td><%= link_to 'Delete', product, :class => "button negative", :confirm => 'Are you sure you want to delete this product?', :method => :delete %></td>
					
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
<br />

<%= link_to 'New Product', new_product_path, :class => "button positive" %>
