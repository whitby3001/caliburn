<span>
	<%= link_to image_tag(img.image.url(:thumb)), img.image.url(:original), :class => "fancybox", :rel => "product-images", :title => "#{link_to('View full size', img.image.url(:original))}" %>
	<div style="display:none">
		<%= link_to image_tag(img.image.url(:medium)), img.image.url(:original), :class => "fancybox", :rel => (img.class == Product ? "" : "main-product-images"), :title => "#{link_to('View full size', img.image.url(:original))}" %>
	</div>
</span>