<div class="span-4">
	The first column
</div>
<div class="span-20 last">
	<table class="product-listing">
	  <tr>
			<th></th>
	    <th>Name</th>
	    <th>Description</th>
	    <th>Price</th>
	    <th>Quantity</th>
	    <th></th>
	  </tr>

	<% @products.each do |product| %>
	  <tr>
			<td><%= image_tag product.image.url(:thumb) unless product.image.nil? %></td>
	    <td><%= product.name %></td>
	    <td><%= product.description %></td>
	    <td><%= number_to_currency(product.price) %></td>
	    <td><%= product.quantity %></td>
	    <td><%= link_to image_tag('basket_put.png')+" Add to Basket", line_items_path(:product_id => product), :method => :post, :class => "button positive" %></td>
	  </tr>
	<% end %>
	</table>
</div>

